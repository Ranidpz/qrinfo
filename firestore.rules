rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - only the user themselves or super_admin can read/write
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Codes collection
    match /codes/{codeId} {
      // Anyone can read codes (for viewer page)
      allow read: if true;

      // Only authenticated users can create codes
      allow create: if request.auth != null;

      // Owner, collaborators, or admin can update
      // Special case: owner can transfer ownership to another user
      allow update: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.collaborators ||
        isAdmin()
      ) || isViewIncrement() || isGalleryUpdate();

      // Only owner or admin can delete
      allow delete: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        isAdmin()
      );

      // Q.Vote Candidates subcollection
      match /candidates/{candidateId} {
        // Anyone can read candidates (for voting page)
        allow read: if true;
        // Anyone can create a candidate (self-registration)
        allow create: if true;
        // Only owner or admin can update/delete candidates
        allow update, delete: if request.auth != null && (
          get(/databases/$(database)/documents/codes/$(codeId)).data.ownerId == request.auth.uid ||
          isAdmin()
        );
      }

      // Q.Vote Votes subcollection
      match /votes/{voteId} {
        // Anyone can read votes (to check if already voted)
        allow read: if true;
        // Votes must go through API route (Admin SDK) to enforce rate limiting and verification
        allow create: if false;
        // Only admin can update/delete votes
        allow update, delete: if isAdmin();
      }

      // Weekly Calendar RSVP registrations subcollection
      match /cellRegistrations/{registrationId} {
        // Anyone can read registrations (for calendar display)
        allow read: if true;
        // Anyone can create a registration (anonymous RSVP)
        allow create: if true;
        // User can update their own registration (visitorId must match) or owner/admin can manage
        allow update: if
          request.resource.data.visitorId == resource.data.visitorId ||
          (request.auth != null && (
            get(/databases/$(database)/documents/codes/$(codeId)).data.ownerId == request.auth.uid ||
            isAdmin()
          ));
        // Deletes only via Admin SDK (API route validates ownership)
        allow delete: if false;
      }

      // Q.Hunt Players subcollection
      match /qhunt_players/{playerId} {
        // Anyone can read players (for leaderboard)
        allow read: if true;
        // Anyone can create a player (registration)
        allow create: if true;
        // Player can update their own data, or owner/admin can manage
        allow update: if true;
        // Only owner or admin can delete players
        allow delete: if request.auth != null && (
          get(/databases/$(database)/documents/codes/$(codeId)).data.ownerId == request.auth.uid ||
          isAdmin()
        );
      }

      // Q.Tag Guests subcollection (all writes via Admin SDK / API routes)
      match /qtagGuests/{guestId} {
        allow read: if true;
        allow create, update, delete: if false;
      }

      // Q.Tag Stats subcollection (all writes via Admin SDK / API routes)
      match /qtagStats/{statId} {
        allow read: if true;
        allow create, update, delete: if false;
      }

      // Q.Hunt Scans subcollection
      match /qhunt_scans/{scanId} {
        // Anyone can read scans (for tracking)
        allow read: if true;
        // Anyone can create a scan (during game)
        allow create: if true;
        // No updates to scans
        allow update: if false;
        // Only owner or admin can delete scans
        allow delete: if request.auth != null && (
          get(/databases/$(database)/documents/codes/$(codeId)).data.ownerId == request.auth.uid ||
          isAdmin()
        );
      }
    }

    // ViewLogs collection - IMPORTANT: Allow anyone to create (for anonymous QR scanning)
    match /viewLogs/{logId} {
      // Anyone can create a view log (when scanning QR code)
      allow create: if true;

      // Only owner of the code or admin can read view logs
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        isAdmin()
      );

      // No one can update or delete view logs
      allow update, delete: if false;
    }

    // LinkClicks collection - for tracking link clicks in QR codes
    match /linkClicks/{clickId} {
      // Anyone can create a link click (when clicking links in viewer)
      allow create: if true;

      // Only owner of the code or admin can read link clicks
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        isAdmin()
      );

      // No one can update or delete link clicks
      allow update, delete: if false;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Anyone authenticated can read notifications
      allow read: if request.auth != null;
      // Only admin can create, update, delete notifications
      allow create, update, delete: if isAdmin();
    }

    // Visitors collection (gamification - anonymous users)
    match /visitors/{visitorId} {
      // Anyone can read (for leaderboard)
      allow read: if true;
      // Anyone can create their visitor profile
      allow create: if request.resource.data.id == visitorId
                    && request.resource.data.nickname is string
                    && request.resource.data.nickname.size() >= 2
                    && request.resource.data.nickname.size() <= 20;
      // Anyone can update their own visitor (nickname changes only, XP updated via progress)
      allow update: if request.resource.data.id == visitorId;
    }

    // VisitorProgress collection (gamification - route progress)
    match /visitorProgress/{progressId} {
      // Anyone can read (for leaderboard)
      allow read: if true;
      // Anyone can create progress for themselves
      allow create: if true;
      // Anyone can update progress (XP increases only enforced in app logic)
      allow update: if true;
    }

    // Folders collection - allow public read for route checking
    match /folders/{folderId} {
      // Allow public read (needed for gamification route checking)
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        isAdmin()
      );
    }

    // Prizes collection (pack/reward system)
    match /prizes/{prizeId} {
      // Anyone can read (needed for lottery)
      allow read: if true;
      // Only route owner or admin can manage prizes
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // PendingPacks collection (unopened packs)
    match /pendingPacks/{packId} {
      // Anyone can read (visitor checks their packs)
      allow read: if true;
      // System creates packs (via app logic)
      allow create: if true;
      // Anyone can mark as opened
      allow update: if true;
      // No delete
      allow delete: if false;
    }

    // PackOpenings collection (opened pack history)
    match /packOpenings/{openingId} {
      // Anyone can read (for lobby display)
      allow read: if true;
      // System creates openings
      allow create: if true;
      // Only admin can update (mark as redeemed)
      allow update: if isAdmin();
      // No delete
      allow delete: if false;
    }

    // VerifiedVoters collection (phone verification for Q.Vote)
    // All operations go through API routes using Admin SDK for security
    match /verifiedVoters/{voterId} {
      allow read: if false;
      allow create: if false;
      allow update: if false;
      // Deletes only via Admin SDK (vote reset API route)
      allow delete: if false;
    }

    // VerificationCodes collection (OTP codes for Q.Vote)
    // All operations go through API routes using Admin SDK for security
    match /verificationCodes/{codeId} {
      allow read: if false;
      allow create: if false;
      allow update: if false;
      // Deletes only via Admin SDK (vote reset API route)
      allow delete: if false;
    }

    // RateLimits collection (for OTP rate limiting)
    // All operations go through API routes using Admin SDK for security
    match /rateLimits/{limitId} {
      allow read: if false;
      allow write: if false;
    }

    // MessageLogs collection (for tracking sent messages)
    match /messageLogs/{logId} {
      // Only owner or admin can read
      allow read: if request.auth != null;
      // Anyone can create (during OTP sending)
      allow create: if true;
      // No update or delete
      allow update, delete: if false;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Helper function to check if this is just a view count increment
    function isViewIncrement() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']);
    }

    // Helper function to check if this is just a userGallery update (for anonymous uploads)
    function isGalleryUpdate() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userGallery']);
    }
  }
}
